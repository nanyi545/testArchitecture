<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.finance.hechuang.serviceonline.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bn_jump_recycler"
        android:text="recyclerView 测试1"
        android:onClick="bnClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bn_jump_recycler"
        android:id="@+id/bn_jump_recycler2"
        android:text="recyclerView 测试2"
        android:onClick="bnClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bn_jump_recycler2"
        android:id="@+id/bn_jump_recycler3"
        android:text="recyclerView 测试3"
        android:onClick="bnClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bn_jump_recycler3"
        android:id="@+id/bn_jump_recycler4"
        android:text="recyclerView 测试4"
        android:onClick="bnClick"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bn_jump_recycler4"
        android:id="@+id/bn_jump_login1"
        android:text="登陆 测试"
        android:onClick="bnClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bn_jump_recycler4"
        android:layout_toRightOf="@id/bn_jump_login1"
        android:id="@+id/bn_jump_setAutoLogin"
        android:text="自动"
        android:onClick="bnClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bn_jump_recycler4"
        android:layout_toRightOf="@id/bn_jump_setAutoLogin"
        android:id="@+id/bn_jump_noAutoLogin"
        android:text="非自动"
        android:onClick="bnClick"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bn_jump_recycler4"
        android:layout_toRightOf="@id/bn_jump_noAutoLogin"
        android:id="@+id/bn_write"
        android:text="写入"
        android:onClick="bnClick"
        />


</RelativeLayout>
